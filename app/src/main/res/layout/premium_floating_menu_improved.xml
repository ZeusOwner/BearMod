<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@drawable/premium_card_background"
    android:elevation="12dp">

    <!-- Left Sidebar Navigation -->
    <LinearLayout
        android:id="@+id/sidebar_container"
        android:layout_width="@dimen/sidebar_width"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#1A1A1A"
        android:padding="@dimen/sidebar_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHeight_min="@dimen/menu_min_height">

        <!-- Header Logo -->
        <ImageView
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:src="@drawable/icon"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:contentDescription="App Logo" />

        <!-- Navigation Icons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_medium">

            <ImageView
                android:id="@+id/nav_players"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                android:src="@drawable/ic_close"
                android:background="@drawable/sidebar_item_selector"
                android:padding="@dimen/nav_icon_padding"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_small"
                android:tag="players"
                android:contentDescription="Players" />

            <ImageView
                android:id="@+id/nav_aimbot"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                android:src="@drawable/ic_close"
                android:background="@drawable/sidebar_item_selector"
                android:padding="@dimen/nav_icon_padding"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_small"
                android:tag="aimbot"
                android:contentDescription="Aimbot" />

            <ImageView
                android:id="@+id/nav_items"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                android:src="@drawable/ic_close"
                android:background="@drawable/sidebar_item_selector"
                android:padding="@dimen/nav_icon_padding"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_small"
                android:tag="items"
                android:contentDescription="Items" />

            <ImageView
                android:id="@+id/nav_vehicles"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                android:src="@drawable/ic_close"
                android:background="@drawable/sidebar_item_selector"
                android:padding="@dimen/nav_icon_padding"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/spacing_small"
                android:tag="vehicles"
                android:contentDescription="Vehicles" />

            <ImageView
                android:id="@+id/nav_settings"
                android:layout_width="@dimen/nav_icon_size"
                android:layout_height="@dimen/nav_icon_size"
                android:src="@drawable/ic_close"
                android:background="@drawable/sidebar_item_selector"
                android:padding="@dimen/nav_icon_padding"
                android:layout_gravity="center"
                android:tag="settings"
                android:contentDescription="Settings" />

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Close Button -->
        <ImageView
            android:id="@+id/close_menu"
            android:layout_width="@dimen/nav_icon_size"
            android:layout_height="@dimen/nav_icon_size"
            android:src="@drawable/ic_close"
            android:background="@drawable/sidebar_item_selector"
            android:padding="@dimen/nav_icon_padding"
            android:layout_gravity="center"
            android:contentDescription="Close Menu" />

    </LinearLayout>

    <!-- Main Content Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#262626"
        android:padding="@dimen/content_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_min="@dimen/content_min_width"
        app:layout_constraintWidth_max="@dimen/content_max_width">

        <!-- Header with Category Name and Status -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/category_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Players"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/status_indicator"
                app:layout_constraintHorizontal_bias="0" />

            <!-- Status Indicator -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="@dimen/status_dot_size"
                android:layout_height="@dimen/status_dot_size"
                android:background="#00FF00"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/category_title"
                app:layout_constraintBottom_toBottomOf="@id/category_title"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/content_scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/header_container"
            app:layout_constraintBottom_toTopOf="@id/quick_actions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_medium">

            <LinearLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Content will be dynamically populated -->

            </LinearLayout>

        </ScrollView>

        <!-- Quick Actions Footer -->
        <LinearLayout
            android:id="@+id/quick_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/action_enable_all"
                android:layout_width="0dp"
                android:layout_height="@dimen/quick_action_height"
                android:layout_weight="1"
                android:text="Enable All"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_small"
                android:gravity="center"
                android:background="@drawable/button_outline_background"
                android:layout_marginEnd="@dimen/spacing_tiny" />

            <TextView
                android:id="@+id/action_disable_all"
                android:layout_width="0dp"
                android:layout_height="@dimen/quick_action_height"
                android:layout_weight="1"
                android:text="Disable All"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_size_small"
                android:gravity="center"
                android:background="@drawable/button_outline_background"
                android:layout_marginStart="@dimen/spacing_tiny" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 