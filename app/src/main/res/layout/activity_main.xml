<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000">

    <!-- Splash Screen Layout -->
    <LinearLayout
        android:id="@+id/splash_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="#FF000000">

        <!-- Logo Container -->
        <FrameLayout
            android:id="@+id/logo_container"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp">

            <!-- Logo Image -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerInside" />

            <!-- Progress Ring -->
            <ProgressBar
                android:id="@+id/logo_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:indeterminateTint="#00FF00"
                android:progressTint="#00FF00"
                android:max="100"
                android:progress="0" />

        </FrameLayout>

        <!-- App Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEAR-ENGINE"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="8dp" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting mod..."
            android:textColor="#00FF00"
            android:textSize="14sp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

    <!-- Main App Layout -->
    <LinearLayout
        android:id="@+id/main_app_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="#FF000000"
        android:visibility="gone"
        android:alpha="0">

        <!-- App Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BearMod"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v3.8.0"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BearMod is running!\nThe floating menu is available."
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="32dp" />

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/premium_card_background"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅ Native library loaded\n✅ Floating overlay active\n✅ ESP rendering enabled\n✅ Anti-recording protection"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Floating Menu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/button_start_background"
                android:layout_marginBottom="12dp"
                android:padding="16dp" />

            <Button
                android:id="@+id/about_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About BearMod"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/button_accent_background"
                android:layout_marginBottom="12dp"
                android:padding="16dp" />

            <Button
                android:id="@+id/exit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exit Application"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:background="@drawable/button_cancel_background"
                android:padding="16dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>