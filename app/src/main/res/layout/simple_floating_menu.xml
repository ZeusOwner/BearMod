<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/premium_card_background"
    android:elevation="8dp">

    <!-- Single Floating Menu -->
    <LinearLayout
        android:id="@+id/floating_menu_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/premium_card_background">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BearMod"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/close_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:background="@drawable/sidebar_item_selector"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Navigation Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tab_esp"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="ESP"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tab_aimbot"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Aimbot"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tab_items"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Items"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/tab_selector"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tab_settings"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@drawable/tab_selector" />

        </LinearLayout>

        <!-- Content Area -->
        <ScrollView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:maxHeight="350dp">

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- ESP Content -->
                <LinearLayout
                    android:id="@+id/content_esp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ESP Settings"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- ESP switches will be added programmatically -->

                </LinearLayout>

                <!-- Aimbot Content -->
                <LinearLayout
                    android:id="@+id/content_aimbot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aimbot Settings"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Aimbot controls will be added programmatically -->

                </LinearLayout>

                <!-- Items Content -->
                <LinearLayout
                    android:id="@+id/content_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Items Settings"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Items controls will be added programmatically -->

                </LinearLayout>

                <!-- Settings Content -->
                <LinearLayout
                    android:id="@+id/content_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Settings controls will be added programmatically -->

                </LinearLayout>

            </FrameLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout> 