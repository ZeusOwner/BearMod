<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/slider_item_height"
    android:background="@drawable/premium_button_primary"
    android:padding="@dimen/spacing_medium"
    android:layout_marginBottom="@dimen/spacing_small">

    <!-- Feature Name -->
    <TextView
        android:id="@+id/feature_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feature Name"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_medium"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/current_value" />

    <!-- Current Value -->
    <TextView
        android:id="@+id/current_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.00"
        android:textColor="#FF3333"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:minWidth="48dp"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/status_dot" />

    <!-- Status Indicator -->
    <View
        android:id="@+id/status_dot"
        android:layout_width="@dimen/status_dot_size"
        android:layout_height="@dimen/status_dot_size"
        android:background="#FF3333"
        app:layout_constraintTop_toTopOf="@id/current_value"
        app:layout_constraintBottom_toBottomOf="@id/current_value"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/spacing_small" />

    <!-- Slider -->
    <SeekBar
        android:id="@+id/feature_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:progressTint="#FF3333"
        android:progressBackgroundTint="#444444"
        android:thumb="@drawable/seekbar_thumb"
        android:progressDrawable="@drawable/seekbar_track"
        app:layout_constraintTop_toBottomOf="@id/feature_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/spacing_small" />

</androidx.constraintlayout.widget.ConstraintLayout> 